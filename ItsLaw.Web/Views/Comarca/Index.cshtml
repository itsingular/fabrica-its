@model List<ItsLaw.Web.ViewModels.ComarcaViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <table style="width:100%">
                    <tr>
                        <td>
                            <h3><b>Listagem de Comarca</b></h3>
                        </td>
                        <td>
                            <a href="@Url.Action("Index", "MenuPrincipal")"><div class="btn btn-primary warning">Voltar</div></a>
                        </td>
                    </tr>                    
                </table>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        <table id="ListaComarca" class="table table-striped table-bordered table-hover" style="width:100%">
                            <thead>
                                <tr class="alert-info">
                                    <td width="040px">ID</td>
                                    <td width="150px">Descrição da Comarca</td>
                                    <td width="090px">Bairro</td>
                                    <td width="090px">Cidade</td>
                                    <td width="020px">Ativo</td>
                                    <td width="020px">Alterar</td>
                                    <td width="020px">Excluir</td>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    var check = "";
                                    if (@item.Ativo == true)
                                    {
                                        check = "checked";
                                    }

                                <tr>
                                    <td width="040px">@item.IdComarca</td>
                                    <td width="150px">@item.Descricao</td>
                                    <td width="090px">@item.Bairro</td>
                                    <td width="090px">@item.Cidade</td>
                                    <td width="020px"><center><input type="checkbox" name="Acao" @check value="@item.Ativo" onclick="return false;" /></center></td>
                                    <td width="020px">
                                        <a href="/Comarca/AbrirAlterarComarca/@item.IdComarca" class="glyphicon glyphicon-edit col-md-1" style="cursor:pointer"></a>
                                    </td>
                                    <td width="020px">
                                        <a type="button" class="glyphicon glyphicon-trash col-md-1" style="cursor:pointer" onclick="MensagemConfirma('Confirme ?','Deseja apagar dados da Comarca ?','@Url.Action("InativarComarca", "Comarca", new { id = @item.IdComarca })')"></a>
                                    </td>
                                </tr>        
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
                <!-- /.row (nested) -->
            </div>
            <a href="/Comarca/IncluirComarca">
                <div class="panel-footer">
                    <span class="pull-left btn btn-default">Adicionar Comarca</span>
                    <div class="clearfix"></div>
                </div>
            </a>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

